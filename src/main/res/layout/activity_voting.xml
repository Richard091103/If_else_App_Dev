<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/page1"
    tools:context=".VotingActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLEASE VOTE WISELY!"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLEASE VOTE WISELY!"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="PRESIDENT LIST:"
        android:textColor="@color/white"
        android:gravity="left"
        android:paddingLeft="30dp"
        android:textStyle="bold"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ramon Magsaysay            BongBong Marcos"
        android:textColor="@color/white"
        android:gravity="left"
        android:paddingLeft="50dp"
        android:textStyle="bold"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fidel V. Ramos                    Corazon Aquino"
        android:textColor="@color/white"
        android:gravity="left"
        android:paddingLeft="50dp"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/president"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="#FEDD59"
        android:paddingLeft="10dp"
        android:textColorHint="@color/white"
        android:textColor="#B71718"
        android:hint="Enter President"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="VICE PRESIDENT LIST:"
        android:textColor="@color/white"
        android:gravity="left"
        android:paddingLeft="30dp"
        android:textStyle="bold"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sara Duterte                        Leni Robredo"
        android:textColor="@color/white"
        android:gravity="left"
        android:paddingLeft="50dp"
        android:textStyle="bold"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jejomar Binay                     Noli de Castro"
        android:textColor="@color/white"
        android:gravity="left"
        android:paddingLeft="50dp"
        android:textStyle="bold"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/vicepresident"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="#FEDD59"
        android:paddingLeft="10dp"
        android:textColorHint="@color/white"
        android:textColor="#B71718"
        android:hint="Enter Vice President"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#B0ECBC00"
        android:text="SUBMIT"
        android:textColor="#FFFFFF"
        android:onClick="Voting"/>

</LinearLayout>